{
    "name": "marufmax/better-flight",
    "description": "FlightPHP with some batteries",
    "authors": [
        {
            "name": "Maruf Alom",
            "email": "desk.maruf@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "vlucas/phpdotenv": "^4.1",
        "mikecao/flight": "^1.3"
    },
    "require-dev": {
        "symfony/var-dumper": "^5.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "autoload": {
        "App" : "app",
        "files": [
            "bootstrap/helpers.php"
        ]
    },
    "autoload-dev": {
        "Tests" : "tests"
    }
}
